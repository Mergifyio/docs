{
  "exclude": ["dist", "public/scalar-api-reference.js"],
  "include": [".astro/types.d.ts", "**/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "es2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
