{
  "exclude": [
    "dist",
    "public/scalar-api-reference.js",
    "public/make-scrollable-code-focusable.js",
    "public/sw.js",
    "node_modules",
  ],
  "include": [
    ".astro/types.d.ts",
    "src"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "es2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
}