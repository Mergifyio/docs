---
import icon from '../assets/merge-queue-icon.svg?raw';

export interface Props {
  width?: string | number;
  class?: string;
}

const { class: className } = Astro.props;
---

<span aria-hidden="true" class:list={["merge-queue-icon", className]} set:html={icon} />

<style>
	.merge-queue-icon {
		display: inline-flex;
		width: 1em;
		height: 1em;
	}
	.merge-queue-icon :global(svg) {
		width: 100%;
		height: 100%;
	}
</style>
