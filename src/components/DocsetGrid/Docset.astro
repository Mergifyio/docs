---
const { title, path } = Astro.props;
---

<div class="container">
	<a href={path}>
		<h4>
			{
				!!Astro.props.icon && (
					<div class="docset-icon">
						<Astro.props.icon />
					</div>
				)
			}
			<span>{title}</span>
		</h4>
	</a>
	<p>
		<slot />
	</p>
</div>

<style lang="scss">
	.container {
		border: 1px solid var(--chakra-colors-chakra-border-color);
		padding: 24px;
		border-radius: 6px;
	}

	a {
		text-decoration: none;
	}

	h4 {
		display: flex;
		align-items: center;

		.docset-icon {
			display: flex;
			align-items: center;
			margin-right: 8px;
		}
	}
</style>
