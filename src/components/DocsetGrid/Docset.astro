---
import { Icon } from 'astro-icon/components';

const { title, path, icon } = Astro.props;
const isStringIcon = typeof icon === 'string';
const IconComponent = !isStringIcon ? icon : null;
---

<div class="container">
	<a href={path}>
		<h4>
			{!!icon && isStringIcon && (
				<div class="docset-icon">
					<Icon name={icon} />
				</div>
			)}
			{IconComponent && (
				<div class="docset-icon">
					<IconComponent />
				</div>
			)}
			<span>{title}</span>
		</h4>
	</a>
	<p>
		<slot />
	</p>
</div>

<style lang="scss">
	.container {
		border: 1px solid var(--chakra-colors-chakra-border-color);
		padding: 24px;
		border-radius: 6px;
	}

	a {
		text-decoration: none;
	}

	h4 {
		display: flex;
		align-items: center;

		.docset-icon {
			display: flex;
			align-items: center;
			margin-right: 8px;
		}
	}
</style>
